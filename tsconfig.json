{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "types": [
      "jest"
    ],
    "paths": {
      "@muku-ui/*": ["packages/*/src"]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "packages/*/src",
    "packages/shims-vue.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
